@model BloggieMVC.Web.Models.ViewModel.AddTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label"> Name </label>
            <input type="text" class="form-control" id="name" name="name" asp-for="Name"/>
        </div>

        <div class="mb-3">
            <label class="form-label"> Display Name </label>
            <input type="text" class="form-control" id="displayName" name="displayName" asp-for="DisplayName" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>